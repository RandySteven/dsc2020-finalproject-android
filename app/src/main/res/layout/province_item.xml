<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/purple"
    android:layout_marginTop="18dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:textColor="@color/white"
        android:id="@+id/tv_province_name"
        android:layout_width="wrap_content"
        android:textSize="30sp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:textColor="@color/white"
        android:id="@+id/tv_positives_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_province_name"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:textColor="@color/white"
        android:id="@+id/tv_positive"
        android:layout_width="wrap_content"
        android:text="Positive"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_province_name"
        android:layout_marginRight="10dp"
        />

    <TextView
        android:textColor="@color/white"
        android:id="@+id/tv_recovered_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_positives_data"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:textColor="@color/white"
        android:id="@+id/tv_recovered"
        android:layout_width="wrap_content"
        android:text="Recovered"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_positive"
        android:layout_marginRight="10dp"
        />

    <TextView
        android:textColor="@color/white"
        android:id="@+id/tv_death_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_recovered_data"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:textColor="@color/white"
        android:id="@+id/tv_death"
        android:layout_width="wrap_content"
        android:text="Death"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_recovered"
        android:layout_marginRight="10dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>